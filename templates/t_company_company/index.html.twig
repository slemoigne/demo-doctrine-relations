{% extends 'base.html.twig' %}

{% block title %}TCompanyCompany index{% endblock %}

{% block body %}
    <h1>TCompanyCompany index</h1>

    <table
        class="
            table
            table-striped
            table-bordered
            table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Address</th>
                <th>Vehicles</th>
                <th>Sys. Embarqu√©s</th>
            </tr>
        </thead>
        <tbody>
        {% for t_company_company in t_company_companies %}
            <tr>
                <td>{{ t_company_company.name }}</td>
                <td>{{ t_company_company.id }}</td>
                <td>
                    {% if t_company_company.tCompanyAddress is defined %}
                        {{ t_company_company.tCompanyAddress }}
                    {% endif %}
                </td>
                <td>{{ t_company_company.tCompanyVehicles|join(', ') }}</td>
                <td>{{ t_company_company.deviceDevices|join(', ') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
